---
import "../styles/global.css";

const {
  title = "AlphaMail",
  description = "AI-powered goal tracking through weekly email check-ins.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col text-neutral-900 antialiased">
    <main class="flex-1 flex items-center justify-center">
      <slot />
    </main>
  </body>
</html>
